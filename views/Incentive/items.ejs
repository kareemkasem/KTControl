<%- include('../shared/head'); %>

<head>
    <link rel="stylesheet" href="/css/incentive.css"/>
</head>

<main>
    <%- include('../shared/nav', {title: "Incentive Items", link: "/incentive"})
    %>
    <div class="incentive-item-list">
        <% items.forEach( item => { %>
            <div data-id="<%= item._id %>" class="incentive-item">
                <p data-id="<%= item._id %>"><span data-id="<%= item._id %>"
                                                   class="incentive-item-detail">Name: </span><%= item.name %></p>
                <p data-id="<%= item._id %>"><span data-id="<%= item._id %>"
                                                   class="incentive-item-detail">Price: </span><%= item.price %></p>
                <p data-id="<%= item._id %>">
                    <span data-id="<%= item._id %>" class="incentive-item-detail">Incentive: </span><%= item.incentive
                    %>
                </p>
                <p data-id="<%= item._id %>">
                    <span data-id="<%= item._id %>" class="incentive-item-detail">Valid Till: </span><%=
                        item.validTill.toDateString() %>
                </p>
            </div>
        <% }) %>
        <a href="/incentive/items/create-item" class="add-button link-reset"
           title="add new incentive item">+
        </a>
    </div>
</main>

<script src="/js/incentive.js"></script>
