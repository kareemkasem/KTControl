<%- include('../shared/head'); %>
<head>
	<link rel="stylesheet" href="/css/incentive.css" />
</head>
<%- include('../shared/nav', {title: "Edit Incentive Item", link:
"/incentive/items"}) %>
<div class="form-container">
	<form
		action="<%= `/incentive/items/${_id.toString()}` %>"
		method="post"
		autocomplete="off"
		class="form"
	>
		<div class="entry">
			<label for="name">Name: </label>
			<input type="text" id="name" name="name" value="<%= name %>" />
		</div>
		<div class="entry">
			<label for="price">Price: </label>
			<input
				type="number"
				step="0.01"
				id="price"
				min="1"
				name="price"
				value="<%= price %>"
			/>
		</div>
		<div class="entry">
			<label for="incentive">Incentive: </label>
			<input
				type="number"
				step="0.01"
				id="incentive"
				name="incentive"
				value="<%= incentive %>"
			/>
		</div>
		<div class="entry">
			<label for="validTill">Valid Till: </label>
			<input
				type="date"
				id="validTill"
				name="validTill"
				value="<%= validTill
                   %>"
			/>
			<small>Date format is Month/Day/Year</small>
		</div>
		<input type="submit" value="Submit" class="submit-button" />
		<input type="button" value="Delete" class="submit-button" id="delete-item-btn">
	</form>
</div>
<script src="/js/incentive.js"></script>
